<h1>Garden Plants</h1>

<% @garden.plots.each do |plot| %>
<div id="plots-<%= plot.id %>">
        <p>Plot Number: <%= plot.number %></p>
        <p>Plant Names: </p>
        <ul>
            <% @garden.plants_with_short_harvest_time.each do |plant| %>
                <li><%= plant.name %></li>
            <% end %>
        </ul>
    </div>
<% end %>
