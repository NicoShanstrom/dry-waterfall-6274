<h1>Plots</h1>
<% @plots.each do |plot| %>
<div id="plots-<%= plot.id %>">
        <p>Plot Number: <%= plot.number %></p>
        <p>Plant names:</p>
        <ul>
            <% plot.plants.each do |plant| %>
                <li>
                    <%= plant.name %></li>
                    <%= button_to "Remove plant ID #{plant.id} from plot #{plot.number}", plot_plant_path(plot, plant), method: :delete %>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>